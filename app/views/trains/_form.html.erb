<%= form_for(@train) do |form| %>
  <%= render 'common/errors', resource: @train %>

  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>

  <div class="field">
    <%= form.label :current_station, "Current Station" %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :title, prompt: true, selected: @train.current_station %>
  </div>

  <div class="actions">
    <%= form.submit "#{@train.new_record? ? 'Create' : 'Edit' }" %>
  </div>
<% end %>
