<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>

<p>
  <strong>On the station:</strong>
  <% if @train.current_station.present? %>
    <%= @train.current_station.title %>
  <% else %>
    Undefined 
  <% end %>  
</p>

<p>
  <strong>On the route:</strong>
  <% if @train.route.present? %>
    <%= @train.route.name %>
  <% else %>
    Undefined route 
  <% end %>  
</p>

  <strong>Carriages</strong>
  <ul>
    <% @train.carriages.each do |car| %> 
      <li><%= link_to "Carriage â„–#{car.number}", train_carriage_path(@train, car) %></li>
    <% end %>  
  </ul>
</p>

<p>
  <%= link_to "Add carriage", new_train_carriage_path(@train) %>
</p>

